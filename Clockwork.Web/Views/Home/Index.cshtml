<script>
    function UserAction() {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("output").innerHTML = this.responseText;
            }
        };
        xhttp.open("GET", "http://localhost:5000/api/currenttime", true);
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send();

    }

    function UserActionTable() {
        var xhttp = new XMLHttpRequest();
        var myTableDiv = document.getElementById("myDynamicTable");
        var table = document.getElementById('table');
        var tableBody = document.createElement('TBODY');
        table.appendChild(tableBody);
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var Data = JSON.parse(this.responseText);
                var tr = document.createElement('TR');
                tableBody.appendChild(tr);
                for (var j = 0; j < 4; j++) {
                    var td = document.createElement('TD');
                    td.append;
                    td.appendChild(document.createTextNode(Data[j]));
                    tr.appendChild(td);
                }
                myTableDiv.appendChild(table);
            }
        }
        xhttp.open("GET", "http://localhost:5000/api/currenttime", true);
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send();
    }


    function PageLoadEntireTable() {
        var xhttp = new XMLHttpRequest();
        var myPageTableDiv = document.getElementById("PageDynamicTable");
        var tableBody = document.getElementById("PageDynamicTableBody");
       // var tableBody = document.createElement('TBODY');
        //table.appendChild(tableBody);
        xhttp.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                var Data = JSON.parse(this.responseText);
                //document.getElementById("output").innerHTML = this.responseText;
                for (var i = 0; i < Data.length; i++) {
                    var tr = document.createElement('TR');
                    tableBody.appendChild(tr);

                    for (var j = 0; j < 4; j++) {
                        var td = document.createElement('TD');
                        td.append;
                        td.appendChild(document.createTextNode(JSON.stringify(Data[j])));
                        tr.appendChild(td);
                    }
                }
                myPageTableDiv.appendChild(table);
            }
        }
        xhttp.open("GET", "http://localhost:5000/api/currenttimetable", true);
        xhttp.setRequestHeader("Content-type", "application/json");
        xhttp.send();
    } 
    $(document).ready(function () {
        $('button').attr('disabled', false);


    });

</script>




